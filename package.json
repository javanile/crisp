    "crisp.css",
    "crisp.min.css"
  ],
  "jsdelivr": "crisp.css",
  "unpkg": "crisp.css",
  "keywords": [
    "css",
    "stylesheet",
    "browser"
  ],
  "homepage": "https://github.com/javanile/crisp",
  "bugs": "https://github.com/javanile/crisp/issues",
  "license": "MIT",
  "author": "Susam Pal <susam@susam.in> (https://susam.in/)",
  "repository": "github:javanile/crisp",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "spcss": "^0.8.0",
    "sass": "^1.49.7",
    "csso-cli": "latest"
  },
  "scripts": {
    "postinstall": "cp node_modules/spcss/sp.css scss/sp.scss",
